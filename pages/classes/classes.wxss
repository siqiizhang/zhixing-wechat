/* pages/classes/classes.wxss */
.leaveClassLast{
  width: 100%;
  align-items: center;
  display: flex;
  justify-content: center;
  color: red;
}
.leaveClass{
  color: red;
  width: 100%;
  align-items: center;
  display: flex;
  justify-content: center;
  border-bottom: 1rpx solid rgba(218, 217, 217, 1);
}
.modalClass{
  background-color: red;
  height: 1000px;
  width: 100px;
}
.formBodyClass{
  display:flex ;
}
.classesDetailClass{
  background-color: white;
  margin:0px auto;
  width: 100%;
  text-align: center;
}
.table{
  display: inline-flex;
  flex-direction: column;
  border: 1rpx solid rgba(218, 217, 217, 1);
  border-bottom: 0;  
}

.scrollClass {
  display: flex;
  width: 100%;
  white-space: nowrap;
  margin-top: 23px;
  height: 100%;
}

.table_header {
  display: inline-flex;
}
.cell_label{
  font-size: 26rpx;
  color: rgba(74, 74, 74, 1);
}
.cell_date_label{
  font-size: 20rpx;
  color: rgba(74, 74, 74, 1);
}
.table_main {
  display: inline-flex;
  flex-direction: row;
}
.right-item{
  display: flex;
  flex-direction: row;
}
.th {
  display: flex;
  flex-direction: column;
  width: 95rpx;
  min-height:100px;
  background: rgba(241, 252, 255, 1);
  border-right: 1rpx solid rgba(218, 217, 217, 1); 
  border-bottom: 1rpx solid rgba(218, 217, 217, 1); 
  justify-content: center;
  align-items: center;
  overflow-x: auto;
}
.td {
  display: flex;
  flex-direction: column;
  /* height: 90rpx; */
  background: white;
  justify-content: center;
  align-items: center;
  border: 1rpx solid rgba(218, 217, 217, 1);
  border-top: 0;
  border-left:0; 
  width:95rpx;
  background-color:white;
  min-height:120px;
}

.table_Text_class {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  font-size: 30rpx;
  color: rgba(55, 134, 244, 1);
  width: 100%;
  word-break: normal;
  border-bottom: 1rpx solid rgba(218, 217, 217, 1);
}
.table_Text_last_class{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  font-size: 30rpx;
  color: rgba(55, 134, 244, 1);
  width: 100%;
  word-break: normal;
}